@model BOL.CommonEntities.EmployeeModule;

 <head>
    <link rel="stylesheet" href="~/ViewCSS/_LeaveAllocation.css"/>
</head>

<div class="row">
    <div class="col-lg-6">
        <h3>EMPLOYEE LEAVE</h3>
    </div>
    <div class="col-lg-6">
        <!-- Add any additional content for the second column if needed -->
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>

                    <th scope="col">EMPId</th>

                    <th scope="col">EMPName</th>

                    <th scope="col">Date</th>

                    <th scope="col">EntryTime</th>

                    <th scope="col">ExitTime</th>

                    <th scope="col">Hours</th>

                    <th scope="col">PresentDays</th>

                    <th scope="col">AbsentDays</th>

                </tr>

            </thead>

            <tbody>

                @if (Model != null && Model.EMPInformation != null && Model.EMPInformation.Any())
                {
                    foreach (var employee in Model.EMPInformation)
                    {
                        <tr>
                            <th scope="row">@employee.EMPId</th>
                            <td>@employee.EMPName</td>
                            <td>@employee.Date.ToString("dd-MMM-yyyy")</td>
                            <td>@employee.EntryTime.ToString(@"hh\:mm\:ss")</td>
                            <td>@employee.ExitTime.ToString(@"hh\:mm\:ss")</td>
                            <td>@employee.Hours</td>
                            <td>@employee.PresentDays</td>
                            <td>@employee.AbsentDays</td>

                        </tr>
                    }
                }
                else
                {
                    <tr>

                        <td colspan="7">No Profile Information</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
    