@model BOL.CommonEntities.EmployeeModule;

<link rel="stylesheet" href="EmployeeList.css">

<div class="row">
    <div class="col-lg-6">
        <h3>EMPLOYEE LISTS</h3>
    </div>
    <div class="col-lg-6">
        <!-- Add any additional content for the second column if needed -->
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">EMPId</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">MobileNumber</th>
                    <th scope="col">UpdateValueTime</th>
                    <th scope="col">UserCreateTime</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.employeeList != null && Model.employeeList.Any())
                {
                    foreach (var employee in Model.employeeList)
                    {
                        <tr>
                            <th scope="row">@employee.EMPId</th>
                            <td>@employee.FristName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.MobileNumber</td>
                            <td>@employee.UpdateValueTime</td>
                            <td>@employee.UserCreateTime</td>
                            <td><a asp-controller="Employee" asp-action="UpdateEmployee" asp-route-EMPId="@employee.EMPId"><b>UPDATE</b></a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No employee found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
