@model BOL.DatabaseEntities.Employee;

<h1>UPDATE EMPLOYEE</h1>
<div class="row">
    <div class="col-lg-8">

        <form asp-controller="Employee" asp-action="UpdateEmployeeRecord" method="post">
            <div class="mb-3">
                <label asp-for="EMPId" class="form-label"><b>EMPId</b></label>
                <input asp-for="EMPId" class="form-control" asp-for="EMPId" readonly />
               
            </div>

            <div class="mb-3">
                <label asp-for="FristName" class="form-label"><b>First Name</b></label>
                <input asp-for="FristName" class="form-control" asp-for="Enter FristName" required />
                
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"><b>Last Name</b></label>
                <input asp-for="LastName" class="form-control" asp-for="Enter LastName" required />
               
            </div>

            <div class="mb-3">
                <label asp-for="MobileNumber" class="form-label"><b>MobileNumber</b></label>
                <input asp-for="MobileNumber" class="form-control" asp-for="Enter MobileNumber" />
               
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            </form>
            
    </div>
</div>


