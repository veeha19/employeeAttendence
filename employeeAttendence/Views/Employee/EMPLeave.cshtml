@model BOL.CommonEntities.EmployeeModule;

<head>
 
    <link rel="stylesheet" href="~/ViewCSS/EMPLeave.css"/>
</head>
  

<div class="row">
    <div class="col-lg-6">
        <h3>EMPLOYEE LEAVE</h3>
    </div>
    <div class="col-lg-6">
        <!-- Add any additional content for the second column if needed -->
    </div>
</div>

<div class="row">
    <div class="col-lg-8">

         <form id="LeaveForm" asp-controller="Employee" asp-action="EMPLeave" method="get">
      
        </form>
        <form asp-controller="Employee" asp-action="LeaveAllocation" method="post">
            <div class="drop">
            <div class="dropdown">
                    <label for="EMPName"><b>Employee Name:</b></label>
                <select id="EMPName" name="EMPName">
                    <option value="">Select Employee</option>

                        @if (Model.employeeList != null && Model.employeeList.Any())
                        {
                            foreach (var employee in Model.employeeList)
                            {
                                <option value="@employee.FristName @employee.LastName">@employee.FristName @employee.LastName</option>
                            }
                        }
                        else
                        {
                            @: <!-- Display default messages -->
                            var defaultMessages = new List<string> { "No data available", "Please add employees", "Check back later" };
                            foreach (var message in defaultMessages)
                            {
                                <p>@message</p>
                            }
                        }

                </select>
            </div>

            <div class="dropdown">
                <label for="Year"><b>Select Year:</b></label>
                <select id="Year" name="Year">
                    <option value="">Select Year</option>
                    @for (int year = DateTime.Now.Year - 10; year <= 2024; year++)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
            
                <button type="submit" class="btn btn-primary" ><b>SEARCH</b></button>
            </div>
            </form>

            
        
            </<div>      
   
            </div>
        </div>
 
