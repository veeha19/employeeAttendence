@model BOL.DatabaseEntities.Employee

<link rel="stylesheet" href="CreateEmployee.css">

<div>
    <h3>New Employee</h3>
</div>

<div class="row">
    <div class="col-md-8">
        @if (TempData["ErrorTemp"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorTemp"]
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-8">

        <form asp-controller="Employee" asp-action="NewEmployee" method="post">

            <div class="mb-3">
                <label for="" class="form-label"><b>FristName</b></label>
                <input type="text" class="form-control" asp-for="FristName" required>
                <div id="firstNameError" class="text-danger"></div>
            </div>

            <div class="mb-3">
                <label for="" class="form-label"><b>LastName</b></label>
                <input type="text" class="form-control" asp-for="LastName" required>
                <div id="lastNameError" class="text-danger"></div>
            </div>

            <div class="mb-3">
                <label for="" class="form-label"><b>MobileNumber</b></label>
                <div class="input-group">
                <span class="input-group-text">+91</span>
                <input type="number" class="form-control" asp-for="MobileNumber" value="+91">
                </div>
                <div id="mobileNumberError" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
